/*
Input (constructor): seed (int)
getRandInt(): returns random integer
*/

class Random {

	static int MAX;
	field int currentSeed;


	constructor Random new(int seed) {
		let currentSeed = seed;
		return this;
	}

	method int getRandom() {
		var int random;
		let random = MathExtra.mod(((4 * currentSeed) + 1),11);
		let currentSeed = random;
		return random;
	}
}
